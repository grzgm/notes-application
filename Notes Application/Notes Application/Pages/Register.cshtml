@page
@model Notes_Application.Pages.RegisterModel
@{
    ViewData["Title"] = "Register - Notes";
    ViewData["Css"] = "~/css/login.css";
}

<partial name="_ValidationScriptsPartial"></partial>

<div class="login">
    <div id="image">
        <span class="material-symbols-outlined" style="font-size: 150px;">
            sticky_note_2
        </span>
    </div>
    <form method="post" autocomplete="on">
        <label for="name">Name: </label>
        <input asp-for="User.Name" type="text" name="name">
        <span asp>@Model.mess</span>
        <input asp-for="User.Email" type="text" name="email">
        <label for="email">:E-Mail</label>
        <label for="password">Password: </label>
        <input asp-for="User.Id" type="password" name="password">
        <button>Manage your notes!</button>
    </form>
</div>